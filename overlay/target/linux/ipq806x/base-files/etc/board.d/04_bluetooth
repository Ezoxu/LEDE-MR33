#!/bin/sh

. /lib/ipq806x.sh

[ -z "$(type -a hciattach)" ] && return 0

case $(ipq806x_board_name) in
	mr33)
		# reset B-LE radio
		echo 1 > /sys/class/gpio/nreset_ble/value
		sleep 1
		echo 0 > /sys/class/gpio/nreset_ble/value

		# To-Do: Add Check to make sure BLE Radio is ready
		# and has a firmware loaded. Until then, we no work.
		exit 0

		# Attach
		hciattach /dev/ttyMSM1 any 1500000 flow
		hciconfig hci0 up
		;;
esac

exit 0
